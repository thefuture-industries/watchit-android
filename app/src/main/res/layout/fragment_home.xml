<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             android:background="#000"
             tools:context=".HomeFragment">

    <include
            android:id="@+id/storyHelper"
            layout="@layout/fragment_story_helper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_alignParentBottom="true"
                    android:padding="16dp"
                    android:background="@color/black">

        <EditText android:layout_width="match_parent" android:layout_height="58dp"
                  android:id="@+id/textStory"
                  android:hint="Story by movie..."
                  android:background="@drawable/edit_text_background"
                  android:textColor="@color/white"
                  android:textColorHint="#444444"
                  android:paddingStart="15dp"
                  android:paddingRight="48dp"
                  android:layout_alignParentStart="true"
                  android:layout_centerVertical="true"
                  android:layout_alignParentLeft="true"
                  android:inputType="text" />

        <ImageButton android:layout_width="47dp" android:layout_height="match_parent"
                     android:id="@+id/btnSendStory"
                     android:background="@drawable/round_button_background"
                     android:layout_alignBottom="@id/textStory"
                     android:layout_alignEnd="@id/textStory"
                     android:layout_alignRight="@id/textStory"
                     android:layout_margin="6dp"
                     android:contentDescription="Send story"
                     android:src="@drawable/svg_baseline_arrow_upward_24"
                     android:tint="@android:color/darker_gray" />

    </RelativeLayout>

</LinearLayout>